{
  "root": true,
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "no-debugger": "error",
    "no-unused-vars": [
      "error",
      // we are only using this rule to check for unused arguments since TS
      // catches unused variables but not args.
      {
        "varsIgnorePattern": ".*",
        "args": "none"
      }
    ],
    "no-restricted-syntax": [
      "error",
      "ObjectPattern > RestElement",
      "AwaitExpression"
    ]
  }
}